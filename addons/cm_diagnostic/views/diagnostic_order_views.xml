<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_diagnostic_order_tree" model="ir.ui.view">
        <field name="name">service.diagnostic.order.tree</field>
        <field name="model">service.diagnostic.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="state"/>
                <field name="start_date"/>
                <field name="finish_date"/>
                <field name="bin"/>
            </list>
        </field>
    </record>

    <record id="view_diagnostic_order_form" model="ir.ui.view">
        <field name="name">service.diagnostic.order.form</field>
        <field name="model">service.diagnostic.order</field>
        <field name="arch" type="xml">
            <form string="Diagnostic Order">
                <sheet>
                    <group>
                        <group>
                            <field name="state"/>
                            <field name="start_date"/>
                            <field name="finish_date"/>
                        </group>
                        <group>
                            <field name="bin"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Devices">
                            <field name="devices">
                                <list editable="bottom">
                                    <field name="device"/>
                                    <field name="state"/>
                                    <field name="start_date"/>
                                    <field name="finish_date"/>
                                    <field name="tests" widget="many2many_tags"/>
                                </list>
                                <form string="Diagnostic Device">
                                    <group>
                                        <field name="device"/>
                                        <field name="state"/>
                                        <field name="start_date"/>
                                        <field name="finish_date"/>
                                        <field name="tests" widget="many2many_tags"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

</odoo>
