<odoo>
    <template id="mail_template_repair_state_change">
        <div>
            <t t-if="object and object.message_ids and object.message_ids[0].tracking_value_ids">
                <t t-foreach="object.message_ids[0].tracking_value_ids" t-as="change">
                    <p t-if="change.field_id.name == 'repair_state'">
                        <t t-out="change.old_value_char"/> â†’
                        <t t-if="object.repairs and object.repairs[:1]">
                            <a t-att-href="'/web#model=repair.order&amp;id=%s&amp;view_type=form' % object.repairs[:1].id">
                                <t t-out="change.new_value_char"/>
                            </a>
                        </t>
                        <t t-else="">
                            <t t-out="change.new_value_char"/>
                        </t>
                        (<t t-out="change.field_id.field_description"/>) </p>
                </t>
            </t>
        </div>
    </template>
</odoo>