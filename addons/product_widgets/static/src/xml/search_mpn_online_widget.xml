<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="product_widgets.SearchMpnOnlineWidget">
        <div class="search-mpn-online-container">
            <t t-if="formattedValue">
                <button t-on-click="searchOnline" tabindex="-1" class="search-mpn-online-btn">S</button>
            </t>
            <input class="o_input search-mpn-online-input" t-att-class="{'o_field_translate': props.isTranslatable}"
                   t-att-id="props.id" t-att-type="props.isPassword ? 'password' : 'text'"
                   t-att-autocomplete="props.autocomplete or (props.isPassword ? 'new-password' : 'off')"
                   t-att-maxlength="props.maxLength > 0 and props.maxLength" t-att-placeholder="props.placeholder"
                   t-att-value="formattedValue" t-ref="input" t-on-input="onInput" t-on-change="onChange"/>
            <t t-if="props.isTranslatable">
                <TranslationButton fieldName="props.name" record="props.record"/>
            </t>
        </div>
    </t>
</templates>
