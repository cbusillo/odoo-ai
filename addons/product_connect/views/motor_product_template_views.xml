<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_motor_product_template_list" model="ir.ui.view">
        <field name="name">motor.product.template.list</field>
        <field name="model">motor.product.template</field>
        <field name="arch" type="xml">
            <list string="Motor Products" editable="bottom" open_form_view="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="part_type"/>
                <field name="year_range_display" string="Years" widget="badge" decoration-info="year_from or year_to"/>
                <field name="year_from" optional="hide" options="{'enable_formatting': false}"/>
                <field name="year_to" optional="hide" options="{'enable_formatting': false}"/>
                <field name="manufacturers" widget="many2many_tags" width="200px"/>
                <field name="configurations" widget="many2many_tags" width="200px"/>
                <field name="strokes" widget="many2many_tags" width="150px"/>
                <field name="excluded_by_parts" widget="many2many_tags" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_motor_product_template_form" model="ir.ui.view">
        <field name="name">motor.product.template.form</field>
        <field name="model">motor.product.template</field>
        <field name="arch" type="xml">
            <form string="Motor Product">
                <sheet>
                    <group>
                        <group string="Basic Information">
                            <field name="name"/>
                            <field name="part_type"/>
                            <field name="initial_quantity" string="Quantity"/>
                            <field name="bin"/>
                            <field name="weight"/>
                        </group>
                        <group string="Additional Options">
                            <field name="is_quantity_listing" widget="boolean_toggle"/>
                            <field name="include_year_in_name" widget="boolean_toggle"/>
                            <field name="include_hp_in_name" widget="boolean_toggle"/>
                            <field name="include_model_in_name" widget="boolean_toggle"/>
                            <field name="include_oem_in_name" widget="boolean_toggle"/>
                        </group>
                        <group string="Manufacturer and Configuration" colspan="2">
                            <group colspan="2">
                                <field name="strokes" widget="many2many_checkboxes"/>
                            </group>
                            <group>
                                <field name="manufacturers" widget="many2many_checkboxes"/>
                            </group>
                            <group>
                                <field name="configurations" widget="many2many_checkboxes"/>
                            </group>
                        </group>

                        <separator string="ðŸ“… Model Year Range" colspan="2"/>
                        <group colspan="2">
                            <div class="alert alert-info" role="alert" colspan="2">
                                <i class="fa fa-info-circle"/> Define which motor model years this template applies to.
                                Leave empty to include all years.
                            </div>
                            <group col="6">
                                <label for="year_from" string="From Year" class="oe_inline"/>
                                <div class="o_row">
                                    <field name="year_from"
                                           placeholder="1990"
                                           style="width: 100px;"
                                           options="{'enable_formatting': false}"
                                           widget="integer"/>
                                    <span class="oe_inline" style="margin: 0 10px;">âžœ</span>
                                </div>
                                <label for="year_to" string="To Year" class="oe_inline"/>
                                <div class="o_row">
                                    <field name="year_to"
                                           placeholder="2024"
                                           style="width: 100px;"
                                           options="{'enable_formatting': false}"
                                           widget="integer"/>
                                </div>
                                <div class="text-muted" colspan="2">
                                    <field name="year_range_display"
                                           readonly="1"
                                           class="badge badge-primary"
                                           style="font-size: 14px; padding: 5px 10px;"/>
                                </div>
                            </group>
                        </group>

                        <group string="Exclusions" colspan="2">
                            <field name="excluded_by_parts"/>
                            <field name="excluded_by_tests">
                                <list editable="bottom">
                                    <field name="conditional_test"/>
                                    <field name="conditional_operator"/>
                                    <field name="condition_value"/>
                                </list>
                            </field>
                        </group>
                        <group string="Repairs" colspan="2">
                            <field name="repair_by_tech_results" widget="many2many_checkboxes"/>
                            <field name="repair_by_tests">
                                <list editable="bottom">
                                    <field name="conditional_test"/>
                                    <field name="conditional_operator"/>
                                    <field name="condition_value"/>
                                </list>
                            </field>

                        </group>
                        <group string="HTML Description" colspan="2">
                            <field name="website_description" widget="html_template"
                                   options="{'codeview': true, 'resizable': true, 'minHeight': '400px'}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_motor_product_template_search" model="ir.ui.view">
        <field name="name">motor.product.template.search</field>
        <field name="model">motor.product.template</field>
        <field name="arch" type="xml">
            <search string="Motor Product Templates">
                <field name="name"/>
                <field name="part_type"/>
                <field name="year_from"/>
                <field name="year_to"/>
                <filter string="Current Year Models" name="current_year"
                        domain="['|', ('year_from', '=', False), ('year_from', '&lt;=', context_today().year),
                                 '|', ('year_to', '=', False), ('year_to', '&gt;=', context_today().year)]"
                        help="Templates that apply to current year motors"/>
                <filter string="Vintage Models" name="vintage"
                        domain="[('year_to', '&lt;', context_today().year - 25)]"
                        help="Templates for motors older than 25 years"/>
                <filter string="Modern Models" name="modern"
                        domain="['|', ('year_from', '&gt;=', context_today().year - 10), ('year_from', '=', False)]"
                        help="Templates for recent motor models"/>
                <separator/>
                <filter string="Has Year Range" name="has_years"
                        domain="['|', ('year_from', '!=', False), ('year_to', '!=', False)]"/>
                <filter string="All Years" name="all_years"
                        domain="[('year_from', '=', False), ('year_to', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Part Type" name="group_part_type" context="{'group_by':'part_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_motor_product_template" model="ir.actions.act_window">
        <field name="name">Motor Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">motor.product.template</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_motor_product_template_search"/>
    </record>

    <menuitem id="menu_product_motor_product" name="Motor Products" parent="menu_subheader_config_motor"
              action="action_motor_product_template" sequence="50" groups="base.group_user"/>
</odoo>
