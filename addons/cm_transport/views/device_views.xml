<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_device_form_transport" model="ir.ui.view">
        <field name="name">service.device.form.transport</field>
        <field name="model">service.device</field>
        <field name="inherit_id" ref="cm_device.view_device_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Transport History">
                    <field name="transport_orders">
                        <list>
                            <field name="transport_order"/>
                            <field name="movement_type"/>
                            <field name="verification_scan"/>
                            <field name="scan_date"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
