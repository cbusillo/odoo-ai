<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_location_option_list" model="ir.ui.view">
        <field name="name">school.location.option.list</field>
        <field name="model">school.location.option</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="location_type"/>
                <field name="external_key"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_location_option_form" model="ir.ui.view">
        <field name="name">school.location.option.form</field>
        <field name="model">school.location.option</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="location_type"/>
                            <field name="external_key"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
