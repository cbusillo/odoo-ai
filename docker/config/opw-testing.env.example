# OPW testing overrides.
# Copy to docker/config/opw-testing.env for the testing stack.
# Replace placeholder values with real credentials in the untracked file.

DEPLOY_COMPOSE_FILES=docker/config/_restore_ssh_volume.yaml:docker/config/base.yaml:docker/config/opw.yaml:docker/config/opw-testing.yaml
DEPLOY_REMOTE_HOST=docker.shiny
DEPLOY_HEALTHCHECK_URL=https://testing.odoo.outboardpartswarehouse.com/web/health

ODOO_STATE_ROOT=/opt/odoo-ai/data/opw-testing
ODOO_BASE_URL=https://testing.odoo.outboardpartswarehouse.com

ODOO_WEB_HOST_PORT=18069
ODOO_LONGPOLL_HOST_PORT=18072
ODOO_DB_HOST_PORT=15432

RESTORE_SSH_DIR=/root/.ssh
RESTORE_SSH_KEY=/root/.ssh/id_restore_opw

ODOO_AUTO_MODULES=product_connect

# Shopify placeholders (set real values in opw-testing.env, keep empty here)
SHOPIFY_STORE_URL_KEY=opw-testing
SHOPIFY_API_TOKEN=
SHOPIFY_API_VERSION=
SHOPIFY_WEBHOOK_KEY=
