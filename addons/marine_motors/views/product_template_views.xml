<odoo>
    <record id="view_product_template_form_inherit_motor" model="ir.ui.view">
        <field name="name">product.template.form.inherit.motor</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="priority" eval="30"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="before">
                <div class="mb-3" invisible="not motor">
                    <label for="motor" class="d-inline me-2">Motor</label>
                    <field name="motor" options="{'no_create': True}" class="d-inline text-primary"/>
                </div>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Test Details" invisible="not motor">
                    <field name="motor_tests" string="">
                        <list>
                            <field name="name"/>
                            <field name="computed_result"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_template_search_inherit_motor" model="ir.ui.view">
        <field name="name">product.template.search.inherit.motor</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="priority" eval="30"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <filter name="filter_motor_products" string="Motor Products" domain="[('motor', '!=', False)]"/>
            </xpath>
        </field>
    </record>
</odoo>
