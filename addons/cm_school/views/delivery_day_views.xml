<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_delivery_day_list" model="ir.ui.view">
        <field name="name">school.delivery.day.list</field>
        <field name="model">school.delivery.day</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="partner_id"/>
                <field name="sequence"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_delivery_day_form" model="ir.ui.view">
        <field name="name">school.delivery.day.form</field>
        <field name="model">school.delivery.day</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
