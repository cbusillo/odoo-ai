<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="product_connect.QRCodeWidget">
        <div class="d-flex flex-column flex-md-row">
            <t t-if="props.readonly">
                <span class="mb-2 mb-md-0" t-out="formattedValue"/>
            </t>
            <t t-else="">
                <input class="form-control qr-code-input" t-att-class="{'o_field_translate': isTranslatable}"
                       t-att-id="props.id"
                       t-att-type="props.isPassword ? 'password' : 'text'"
                       t-att-autocomplete="props.autocomplete or (props.isPassword ? 'new-password' : 'off')"
                       t-att-maxlength="maxLength > 0 and maxLength" t-att-placeholder="props.placeholder" t-ref="input"
                       t-att-value="formattedValue" t-on-input="onInput" t-on-change="onChange"
                       t-on-focusin="onInputFocus"/>
                <t t-if="isTranslatable">
                    <TranslationButton fieldName="props.name" record="props.record"/>
                </t>
            </t>
            <button type="button" class="btn btn-primary mb-2 mb-md-0 mr-md-2"
                    t-on-click.prevent="toggleScan">
                <t t-out="state.buttonLabel"/>
            </button>
            <t t-if="state.flashlightLabel">
                <button type="button" class="btn btn-secondary mb-2 mb-md-0"
                        t-on-click.prevent="toggleFlashlight">
                    <t t-out="state.flashlightLabel"/>
                </button>
            </t>
        </div>
        <video id="qrRender" class="w-50 mt-2" t-ref="qrReader"></video>
    </t>
</templates>
