<templates>
    <t t-name="product_widgets.RepairStatesWidget">
        <t t-foreach="state.repairStates" t-as="repairState" t-key="repairState.id">
            <button type="button" class="btn btn-outline-secondary repair-state-icon-clickable" t-on-click="onIconClick"
                    t-att-data-state-id="repairState.id" style="padding: 2px 4px; margin: 0 2px;">
                <i t-att-class="'fa text-' + repairState.color + ' ' + repairState.icon"
                   t-att-title="repairState.title"></i>
            </button>
        </t>
    </t>
</templates>
