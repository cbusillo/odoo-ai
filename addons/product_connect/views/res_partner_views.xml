<odoo>
    <record id="view_partner_tree_inherit_connect" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit.connect</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <field name="ebay_username" optional="hide"/>
                <field name="shopify_customer_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="view_partner_form_inherit_connect" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.connect</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">21</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="External Integrations" invisible="not ebay_username and not shopify_customer_id">
                    <group col="2">
                        <group invisible="not shopify_customer_id">
                            <separator string="Shopify"/>
                            <field name="shopify_customer_id" widget="CopyClipboardChar"/>
                            <field name="shopify_customer_admin_url" widget="CopyClipboardURL"/>
                        </group>
                        <group invisible="not ebay_username">
                            <separator string="eBay"/>
                            <field name="ebay_username"/>
                            <field name="ebay_profile_url" widget="CopyClipboardURL"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_partner_search_inherit_connect" model="ir.ui.view">
        <field name="name">res.partner.search.inherit.connect</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="priority">22</field>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="filter_contacts_only" string="Contacts" domain="[('type','in',('contact', False))]"/>
                <filter name="filter_shopify_only" string="Shopify" domain="[('category_id.name','=', 'Shopify')]"/>
            </xpath>
        </field>
    </record>

</odoo>