<odoo>
    <record id="view_product_template_form_inherit_shopify" model="ir.ui.view">
        <field name="name">product.template.form.inherit.shopify</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="priority" eval="30"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="shopify_product_url" widget="CopyClipboardURL"/>
                <field name="shopify_product_admin_url" widget="CopyClipboardURL"/>
            </xpath>
        </field>
    </record>
</odoo>
