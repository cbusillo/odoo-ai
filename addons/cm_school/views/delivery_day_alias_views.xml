<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_delivery_day_alias_list" model="ir.ui.view">
        <field name="name">school.delivery.day.alias.list</field>
        <field name="model">school.delivery.day.alias</field>
        <field name="arch" type="xml">
            <list>
                <field name="delivery_day_id"/>
                <field name="system_id"/>
                <field name="external_key"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_delivery_day_alias_form" model="ir.ui.view">
        <field name="name">school.delivery.day.alias.form</field>
        <field name="model">school.delivery.day.alias</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="delivery_day_id"/>
                            <field name="system_id"/>
                        </group>
                        <group>
                            <field name="external_key"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
