# Odoo AI Docker Environment Configuration
# Copy this file to .env and customize for your project

# Python and Odoo versions
PYTHON_VERSION=3.12
ODOO_VERSION=18.0

# Container configuration
ODOO_CONTAINER_PREFIX=odoo  # Container naming prefix (e.g., odoo-web-1)
COMPOSE_BUILD_TARGET=development
COMPOSE_MENU=false
DOCKER_CLIENT_TIMEOUT=600

# Database configuration
ODOO_DB_NAME=odoo_dev
ODOO_DB_USER=odoo
ODOO_DB_PASSWORD=changeme

# Odoo configuration
ODOO_ENTERPRISE_REPOSITORY=codebykyle/odoo-enterprise-mirror
ODOO_ADDONS_PATH=/opt/project/addons,/odoo/addons,/volumes/enterprise

# Performance limits (uncomment to customize)
# ODOO_LIMIT_MEMORY_HARD=26843545600
# ODOO_LIMIT_MEMORY_SOFT=21474836480
# ODOO_LIMIT_REQUEST=65536
ODOO_LIMIT_TIME_CPU=72000
ODOO_LIMIT_TIME_REAL=72000
ODOO_LIMIT_TIME_WORKER_CRON=72000

# Optional tokens (add your own if needed)
# GITHUB_TOKEN=
# HF_TOKEN=