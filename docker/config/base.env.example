# Shared environment defaults for all stacks.
# Copy to docker/config/base.env and adjust as needed.
# Keep real secrets out of version control; store them in untracked .env files.

# Core database connectivity (used by restore/bootstrap tooling)
ODOO_DB_HOST=database
ODOO_DB_PORT=5432
ODOO_DB_USER=odoo
ODOO_DB_PASSWORD=change_me
ODOO_DB_NAME=odoo_dev

# File storage defaults
ODOO_FILESTORE_PATH=/volumes/data
ODOO_FILESTORE_OWNER=

# Default external base URL (override per stack)
ODOO_BASE_URL=http://localhost:8069

# Restore/bootstrap safety toggles
RESTORE_SSH_DIR=
RESTORE_SSH_KEY=
SANITIZE_DISABLE_CRON=true

# Module update behaviour
#   AUTO: discover all local modules from LOCAL_ADDONS_DIRS/ODOO_ADDONS_PATH
#   <list>: comma-separated module names
#   blank: skip automatic updates
ODOO_UPDATE=AUTO

# Additional addon search roots for AUTO discovery (colon or comma delimited)
LOCAL_ADDONS_DIRS=
