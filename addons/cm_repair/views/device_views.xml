<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_device_form_repair" model="ir.ui.view">
        <field name="name">service.device.form.repair</field>
        <field name="model">service.device</field>
        <field name="inherit_id" ref="cm_device.view_device_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Repair Batches">
                    <field name="repair_batch_lines">
                        <list>
                            <field name="batch_id"/>
                            <field name="state"/>
                            <field name="start_date"/>
                            <field name="finish_date"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
