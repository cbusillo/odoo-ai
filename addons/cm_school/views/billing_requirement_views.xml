<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cm_billing_requirement_list" model="ir.ui.view">
        <field name="name">school.billing.requirement.list</field>
        <field name="model">school.billing.requirement</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="target_model"/>
                <field name="field_name"/>
                <field name="requirement_group"/>
                <field name="is_required"/>
                <field name="sequence"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_cm_billing_requirement_form" model="ir.ui.view">
        <field name="name">school.billing.requirement.form</field>
        <field name="model">school.billing.requirement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="requirement_group"/>
                            <field name="is_required"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="target_model"/>
                        <field name="field_name"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
