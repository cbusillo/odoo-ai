# OPW project-level defaults.
# Copy to docker/config/opw.env and adjust per environment.

ODOO_PROJECT_NAME=opw
ODOO_STATE_ROOT=/opt/odoo-ai/data/opw

# Shopify integration placeholders (set real values in untracked .env files)
SHOPIFY_STORE_URL_KEY=opw
SHOPIFY_API_TOKEN=
SHOPIFY_WEBHOOK_KEY=
# Optionally pin API version (e.g., 2025-07)
SHOPIFY_API_VERSION=

# Module update behaviour for OPW stacks
ODOO_UPDATE=AUTO
# Explicit list of addons to install/update when ODOO_UPDATE=AUTO
ODOO_AUTO_MODULES=product_connect
# Colon/comma delimited addon directories scanned when ODOO_UPDATE=AUTO
LOCAL_ADDONS_DIRS=/volumes/addons/opw:/volumes/enterprise
