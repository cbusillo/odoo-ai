<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_alias_tree" model="ir.ui.view">
        <field name="name">account.alias.tree</field>
        <field name="model">account.alias</field>
        <field name="arch" type="xml">
            <list>
                <field name="alias"/>
                <field name="alias_type"/>
                <field name="partner_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_account_alias_form" model="ir.ui.view">
        <field name="name">account.alias.form</field>
        <field name="model">account.alias</field>
        <field name="arch" type="xml">
            <form string="Account Alias">
                <sheet>
                    <group>
                        <group>
                            <field name="alias"/>
                            <field name="alias_type"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
