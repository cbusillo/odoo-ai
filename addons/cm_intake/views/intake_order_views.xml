<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_intake_order_tree" model="ir.ui.view">
        <field name="name">service.intake.order.tree</field>
        <field name="model">service.intake.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="stage_id"/>
                <field name="employee"/>
                <field name="client"/>
                <field name="transport_order"/>
                <field name="finish_date"/>
            </list>
        </field>
    </record>

    <record id="view_intake_order_form" model="ir.ui.view">
        <field name="name">service.intake.order.form</field>
        <field name="model">service.intake.order</field>
        <field name="arch" type="xml">
            <form string="Intake Order">
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="state" invisible="1"/>
                            <field name="employee"/>
                            <field name="client"/>
                        </group>
                        <group>
                            <field name="transport_order"/>
                            <field name="finish_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Devices">
                            <field name="devices">
                                <list editable="bottom">
                                    <field name="device"/>
                                    <field name="has_case"/>
                                    <field name="claim_number"/>
                                    <field name="po_number"/>
                                    <field name="needs_estimate"/>
                                    <field name="customer_stated_notes"/>
                                    <field name="products" widget="many2many_tags"/>
                                </list>
                                <form string="Intake Device">
                                    <group>
                                        <field name="device"/>
                                        <field name="has_case"/>
                                        <field name="claim_number"/>
                                        <field name="po_number"/>
                                        <field name="needs_estimate"/>
                                        <field name="customer_stated_notes"/>
                                        <field name="products" widget="many2many_tags"/>
                                    </group>
                                    <group string="Restricted">
                                        <field name="student_name"/>
                                        <field name="guardian_name"/>
                                        <field name="guardian_phone"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

</odoo>
