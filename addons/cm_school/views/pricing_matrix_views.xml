<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cm_pricing_matrix_list" model="ir.ui.view">
        <field name="name">school.pricing.matrix.list</field>
        <field name="model">school.pricing.matrix</field>
        <field name="arch" type="xml">
            <list>
                <field name="catalog_id"/>
                <field name="contract_id"/>
                <field name="partner_id"/>
                <field name="model_label"/>
                <field name="repair_label"/>
                <field name="device_model_id"/>
                <field name="part_product_id"/>
                <field name="price"/>
                <field name="currency_id"/>
                <field name="effective_date"/>
                <field name="expires_at"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_cm_pricing_matrix_form" model="ir.ui.view">
        <field name="name">school.pricing.matrix.form</field>
        <field name="model">school.pricing.matrix</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="catalog_id"/>
                            <field name="contract_id"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="model_label"/>
                            <field name="repair_label"/>
                            <field name="device_model_id"/>
                            <field name="part_product_id"/>
                        </group>
                        <group>
                            <field name="price"/>
                            <field name="currency_id" readonly="1"/>
                            <field name="effective_date"/>
                            <field name="expires_at"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
