<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_device_tree" model="ir.ui.view">
        <field name="name">device.tree</field>
        <field name="model">device</field>
        <field name="arch" type="xml">
            <list>
                <field name="serial_number"/>
                <field name="is_serial_unavailable"/>
                <field name="model"/>
                <field name="owner"/>
                <field name="payer"/>
                <field name="bin"/>
                <field name="is_in_manufacturer_warranty"/>
            </list>
        </field>
    </record>

    <record id="view_device_form" model="ir.ui.view">
        <field name="name">device.form</field>
        <field name="model">device</field>
        <field name="arch" type="xml">
            <form string="Device">
                <sheet>
                    <group>
                        <group>
                            <field name="serial_number"/>
                            <field name="is_serial_unavailable"/>
                            <field name="model"/>
                            <field name="owner"/>
                            <field name="payer"/>
                        </group>
                        <group>
                            <field name="bin"/>
                            <field name="is_in_manufacturer_warranty"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Transport History">
                            <field name="transport_orders">
                                <list>
                                    <field name="transport_order"/>
                                    <field name="movement_type"/>
                                    <field name="verification_scan"/>
                                    <field name="scan_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Intake History">
                            <field name="intake_orders">
                                <list>
                                    <field name="intake_order"/>
                                    <field name="has_case"/>
                                    <field name="customer_stated_notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Diagnostic History">
                            <field name="diagnostic_orders">
                                <list>
                                    <field name="diagnostic_order"/>
                                    <field name="state"/>
                                    <field name="start_date"/>
                                    <field name="finish_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Repair Batches">
                            <field name="repair_batch_lines">
                                <list>
                                    <field name="batch_id"/>
                                    <field name="state"/>
                                    <field name="start_date"/>
                                    <field name="finish_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Invoices">
                            <field name="invoices" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_devices" model="ir.actions.act_window">
        <field name="name">Devices</field>
        <field name="res_model">device</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_devices" name="Devices"
              parent="menu_cm_custom_root" action="action_devices" sequence="70"/>
</odoo>
