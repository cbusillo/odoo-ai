<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cm_billing_context_list" model="ir.ui.view">
        <field name="name">school.billing.context.list</field>
        <field name="model">school.billing.context</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="sequence"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_cm_billing_context_form" model="ir.ui.view">
        <field name="name">school.billing.context.form</field>
        <field name="model">school.billing.context</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="requirement_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
