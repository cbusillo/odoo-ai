<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cm_billing_contract_list" model="ir.ui.view">
        <field name="name">school.billing.contract.list</field>
        <field name="model">school.billing.contract</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="policy_id"/>
                <field name="context_id"/>
                <field name="pricelist_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="sequence"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_cm_billing_contract_form" model="ir.ui.view">
        <field name="name">school.billing.contract.form</field>
        <field name="model">school.billing.contract</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="policy_id"/>
                            <field name="context_id"/>
                        </group>
                        <group>
                            <field name="pricelist_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
