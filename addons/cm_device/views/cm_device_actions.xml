<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_devices" model="ir.actions.act_window">
        <field name="name">Devices</field>
        <field name="res_model">service.device</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_device_search"/>
    </record>

    <record id="action_devices_legacy_missing_payer" model="ir.actions.act_window">
        <field name="name">Legacy: Missing Payer</field>
        <field name="res_model">service.device</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("payer", "=", False)]</field>
        <field name="search_view_id" ref="view_device_search"/>
        <field name="context">{"search_default_legacy_missing_payer": 1}</field>
    </record>
</odoo>
