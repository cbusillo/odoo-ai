# CM testing stack overrides.
# Copy to docker/config/cm-testing.env and supply real credentials/secrets locally.

COMPOSE_PROJECT_NAME=cm-testing
ODOO_PROJECT_NAME=cm-testing
ODOO_DB_NAME=cm_testing
ODOO_STATE_ROOT=/opt/odoo-ai/data/cm-testing

DEPLOY_COMPOSE_FILES=docker/config/_restore_ssh_volume.yaml:docker/config/base.yaml:docker/config/cm.yaml:docker/config/cm-testing.yaml
DEPLOY_REMOTE_HOST=odoo-testing.tail2f54e.ts.net
DEPLOY_REMOTE_STACK_PATH=/opt/odoo-ai/repos/cm-testing
DEPLOY_REMOTE_ENV_PATH=/opt/odoo-ai/data/cm-testing/.env
DEPLOY_HEALTHCHECK_URL=http://odoo-testing.tail2f54e.ts.net:8069/web/health

ODOO_BASE_URL=http://odoo-testing.tail2f54e.ts.net:8069
ODOO_WEB_HOST_PORT=8069
ODOO_LONGPOLL_HOST_PORT=8072
ODOO_DB_HOST_PORT=25432

POSTGRES_HOST_NOFILE_SOFT=1024
POSTGRES_HOST_NOFILE_HARD=1024

# Set per-environment and never commit real secrets.
#ODOO_ADMIN_PASSWORD=Justin#2

RESTORE_SSH_DIR=/root/.ssh
# RESTORE_SSH_KEY=/root/.ssh/id_restore_cm

LOCAL_ADDONS_DIRS=/volumes/addons/cm
ODOO_AUTO_MODULES=cm_custom
