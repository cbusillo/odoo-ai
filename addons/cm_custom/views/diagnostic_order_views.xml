<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_diagnostic_order_tree" model="ir.ui.view">
        <field name="name">diagnostic.order.tree</field>
        <field name="model">diagnostic.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="stage_id"/>
                <field name="start_date"/>
                <field name="finish_date"/>
                <field name="bin"/>
            </list>
        </field>
    </record>

    <record id="view_diagnostic_order_form" model="ir.ui.view">
        <field name="name">diagnostic.order.form</field>
        <field name="model">diagnostic.order</field>
        <field name="arch" type="xml">
            <form string="Diagnostic Order">
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="state" invisible="1"/>
                            <field name="start_date"/>
                            <field name="finish_date"/>
                        </group>
                        <group>
                            <field name="bin"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Devices">
                            <field name="devices">
                                <list editable="bottom">
                                    <field name="device"/>
                                    <field name="stage_id"/>
                                    <field name="start_date"/>
                                    <field name="finish_date"/>
                                    <field name="tests" widget="many2many_tags"/>
                                </list>
                                <form string="Diagnostic Device">
                                    <group>
                                        <field name="device"/>
                                        <field name="stage_id"/>
                                        <field name="state" invisible="1"/>
                                        <field name="start_date"/>
                                        <field name="finish_date"/>
                                        <field name="tests" widget="many2many_tags"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_diagnostic_orders" model="ir.actions.act_window">
        <field name="name">Diagnostic Orders</field>
        <field name="res_model">diagnostic.order</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_diagnostic_orders" name="Diagnostic Orders"
              parent="menu_cm_custom_root" action="action_diagnostic_orders" sequence="30"/>
</odoo>
